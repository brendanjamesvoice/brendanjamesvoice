---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---

<div class="space-y-1">
  <div class="text-sm text-neutral-800 font-semibold">{title}</div>
  <div class="bg-black">
    <iframe
      class="block min-h-[200px] min-w-full max-w-[200px]"
      src={src}
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
  </div>
</div>
